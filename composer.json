{
    "name": "leopardrock/php-sms",
    "description": "SMS delivery mechanisms (extracted from SMP for use in Hermes and Plutus)",
    "keywords": [
        "leopardrock",
        "kannel",
        "clickatell",
        "panaceamobile",
        "smsportal",
        "nexmo"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Jacques Marneweck",
            "email": "jacques@siberia.co.za"
        }
    ],
    "require": {
        "php": ">=7.4.0",
        "guzzlehttp/guzzle": "^7.0",
        "ramsey/uuid": "^4.1"
    },
    "require-dev": {
        "brick/varexporter": "^0.3.5",
        "ergebnis/composer-normalize": "^2.15",
        "friendsofphp/php-cs-fixer": "^3.0",
        "mockery/mockery": "^0.9.8",
        "php-vcr/php-vcr": "^1.5",
        "php-vcr/phpunit-testlistener-vcr": "^3.2",
        "phpro/grumphp": "^0.18",
        "phpunit/php-invoker": "^3.1",
        "phpunit/phpunit": "^9.5",
        "rector/rector": "^0.11.30",
        "sensiolabs/security-checker": "^6.0",
        "squizlabs/php_codesniffer": "^3.6",
        "vimeo/psalm": "^4.8"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Leopardrock\\": "src/"
        }
    },
    "scripts": {
        "phpcs": "phpcs --standard=PSR2 ./src/*.php ./src/*/*.php",
        "test": "phpunit --configuration=tests/phpunit.xml"
    }
}
